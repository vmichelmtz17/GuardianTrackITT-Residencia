<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo de la aplicación -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Personalizar colores de la barra de acción -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Personalizar el estilo de los botones -->
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
    </style>

    <!-- Estilo de los botones -->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MinimalButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/minimal_button_background</item>
        <item name="android:textColor">@color/minimal_button_text_color</item>
        <item name="android:textSize">14sp</item>
        <!-- Agrega otros atributos personalizados según tus necesidades -->
    </style>
</resources>
